<h2><%= @post.title %></h2>
<p><%= @post.body %></p>
<hr>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Remove', post_path(@post), method: :delete, data: {confirm: "Can you delete post?"} %>
<h3>Comments</h3>
<ul class="posts_list">
  <%  @post.comments.each do |comment| %>
    <li class="post_item">
      <p>
        <strong>
          <%= comment.username %>
        </strong>
        <%= comment.body %>
      </p>
    </li>
  <% end %>
</ul>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <fieldset>
    <label for="">User</label>
    <%= f.text_field :username %>
  </fieldset>
  <fieldset>
    <label for="">Comment</label>
    <%= f.text_area :body %>
  </fieldset>
  <fieldset>
    <%= f.submit("Add comment") %>
  </fieldset>
<% end %>